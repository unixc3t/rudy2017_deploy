<%= form_for @product do |f| %>
    <%= f.text_field :name, placeholder: 'Name' %>
    <%= f.text_field :price, placeholder: 'Price' %>

    <%= f.fields_for :images do |img_f| %>
        <%= render 'image_fields', f: img_f %>
    <% end %>
    <div class="links">
      <%= link_to_add_association '添加图片', f, :images ,class:'btn btn-primary'%>
    </div>
    <%= f.submit 'save' %>
<% end %>
